{
  "manifest_version": 3,
  "name": "Vypode for Letterboxd",
  "version": "5.0.0",
  "description": "Swipe-style interface for quickly rating and adding films on Letterboxd â€” with smart filtering, collection sync, and cloud backup",
  "permissions": [
    "storage",
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://letterboxd.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://letterboxd.com/film/*",
        "https://letterboxd.com/films/*",
        "https://letterboxd.com/*/films/*",
        "https://letterboxd.com/*/watchlist/*",
        "https://letterboxd.com/*/list/*"
      ],
      "js": ["film-state.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vypode for Letterboxd"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
